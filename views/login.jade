//- login page

extends layout
block content
    form.form-horizontal(method='post')
        div.control-group
            label.control-label(for="inputUsername") Username
            div.controls
                input#inputUsername(type="text",placeholder="Username",name="name")
        div.control-group
            label.control-label(for="inputPassword") Password
            div.controls
                input#inputPassword(type='password',placeholder="Password",name="password")
        div.control-group
            div.controls
                button.btn(type="submit") Sign in

