//-base layout

doctype 5
html
    title= title
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.min.css')
    body
    include layout/header
    div.container
        div.container-fluid
            div.row-fluid
                div.span2
                div.page-header.span10
                    h1 #{title}
        div.container-fluid
            div.row-fluid
                div.span2
                    include layout/nav
                div.span10
                    include layout/notifaction
                    block content
    include  layout/footer


